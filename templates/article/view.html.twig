{% extends "base.html.twig"%}

{% block title %}Article :{{article.title}}{% endblock %}

{% block body %} 

    <h1>{{article.title}}</h2>
    <div>
        
        {% if article.image != null %}
            <img style="width:100%"; src="/assets/upload/images/{{article.image}}" alt="{{article.title}}"/>
        {% else %}
            <div style="text-align:center;padding:5px; ">
                <div class="material-icons">image_not_supported</div>
                <div>No image</div>
            </div>
        {% endif %}
        
        
        <div style="margin: 2rem;">
            {{article.content | raw}}
        </div>
    </div>
  
{% endblock %}
